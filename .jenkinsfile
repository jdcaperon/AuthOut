pipeline {
  agent any
  
  stages {
    stage('Build Docs') {
      steps {
        script {
          echo "Building the documentation website"
          sh "mkdir -p build/docs"
          sh "cd docs && yarn"
          sh "cd docs/website && yarn && yarn run build"
          sh "cp -r docs/website/build/* build/docs"
        }
      }
    }
    stage('Build Product Web') {
      steps {
        script {
          echo "Building Product Website"
        }
      }
    }
    stage('Build Web application') {
      steps {
        script {
          echo "Building Web application"
        }
      }
    }
    stage('Build Android application') {
      steps {
        script {
          echo "Building Android application"
        }
      }
    }
    stage('Build Server') {
      steps {
        script {
          echo "Building Server"
          sh "cd server && ./gradlew build"
        }
      }
    }
    stage('Publish to master') {
      when {
        expression {env.GIT_BRANCH == 'origin/master'}
      }
      steps {
        echo "Publishing to master"
        slackSend color: 'good', message: 'Publishing to master'
      }
    }
    stage('Publish to develop') {
      when {
        expression {env.GIT_BRANCH == 'origin/develop'}
      }
      steps {
        echo "Publishing to develop"
        withCredentials([string(credentialsId: 'betaPass', variable: 'SSHPASS')]) {
          sh '''
            sshpass -e scp -o stricthostkeychecking=no -r build/docs rocket@deco3801.wisebaldone.com:/var/www/deco3801.wisebaldone.com/docs
            sshpass -e scp -o stricthostkeychecking=no -r distribution/ rocket@deco3801.wisebaldone.com:/etc/nginx/sites-available/
          '''
        // Reboot nginx
        }
      }
    }
  }
}